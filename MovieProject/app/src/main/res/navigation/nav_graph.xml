<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.movieproject.ui.home.HomeFragment"
        android:label="Home">

        <action
            android:id="@+id/actionHomeFragmentToDetailsFragment"
            app:destination="@id/detailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.movieproject.ui.favorite.FavoritesFragment"
        android:label="Favorites" />

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.movieproject.ui.details.DetailsFragment"
        android:label="Details">

        <argument
            android:name="movieId"
            app:argType="integer" />

        <action
            android:id="@+id/actionDetailsFragmentToFavoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>

</navigation>
